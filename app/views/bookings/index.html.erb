<h1 class="mb-5">Looking forward to your next experience? These are your bookings</h1>

<div class="seven-columns">
  <!-- Header row -->
  <p></p> <!-- for image column -->
  <h5>Title</h5>
  <h5>Start date</h5>
  <h5>End date</h5>
  <h5>Total price</h5>
  <p></p> <!-- for edit button -->
  <p></p> <!-- for delete button -->

  <% @bookings.each do |booking| %>
    <%= image_tag 'Moritz_von_Nassau.png', alt: 'image', width: '100' %>
    <h5><%= booking.life.title %></h5>
    <p><%= booking.start_date %></p>
    <p><%= booking.end_date %></p>
    <p><%= "â‚¬ #{booking.total_price}" %></p>
    <%= link_to "Edit", edit_life_booking_path(booking.life, booking), class: "btn btn-primary" %>
