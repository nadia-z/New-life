<h1 class="m-5">Looking forward to your next experience?</h1>
<h5 class="m-5">Your bookings</h5>
<div class="m-5">
<div class="six-columns">
  <!-- Header row -->
  <p></p> <!-- for image column -->
  <h5>Title</h5>
  <h5>Start date</h5>
  <h5>End date</h5>
  <h5>Total price</h5>
  <p></p> <!-- for edit button -->
  <% @bookings.each do |booking| %>
  <% life = booking.life %>
  <div class="ms-5">
    <% if life&.images&.attached? %>
      <%= image_tag life.images.first, class: "small-image" %>
    <% else %>
      <%= image_tag 'Moritz_von_Nassau.png', class: "small-image" %>
    <% end %>
    </div>
    <h5><%= booking.life.title %></h5>
    <div><%= booking.start_date %></div>
    <div><%= booking.end_date %></div>
    <div><%= "â‚¬ #{booking.total_price.to_i}" %></div>
    <%= link_to "Show Booking", life_booking_path(booking.life, booking), class: "btn btn-primary mb-5 me-5" %>
  <% end %>
</div>
</div>
