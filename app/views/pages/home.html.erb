<h1>Choose between a list of new lives</h1>


<div class="card-container">
  <% @lives.each do |life| %>

  <div class="card life-card" style="width: 18rem;">
    <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= life.title %></h5>
      <p class="card-text"><%= life.description %></p>
      <p class="card-text"><%= "â‚¬ #{life.price_per_day}" %></p>
      <p class="card-text">Status: <%= life.status %></p>
      <div class="btn-container">
        <div class="btn btn-primary" style="border-radius: 8px; width: 30"><%= link_to "Check life", life_path(life), style:"color: white; text-decoration: none;" %></div>
        <% if life.status == "Available" %>
          <div class="btn btn-success" style="border-radius: 8px; width: 30"><%= link_to "Book experience", "lives/#{life.id}/bookings/new", style:"color: white; text-decoration: none;" %></div>
        <% else %>
          <div></div>
        <% end %>
      </div>
    </div>
  </div>

  <% end %>
</div>
